<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE schema SYSTEM "../../../lib/pkp/dtd/xmlSchema.dtd">

<!--
  * plugins/generic/linksAdder/schema.xml
  *
  * LinksAdder plugin schema in XML.
  *
  -->

<schema version="0.2">
	<!--
	 *
	 * TABLE munipress_about_links
	 *
	 -->
	<table name="munipress_added_links">
		<field name="added_link_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="umisteni" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="journal_id" type="I8">
			<NOTNULL/>
		</field>
                <field name="target" type="C2" size="255" />
		<descr>Added links</descr>
	</table>

	<!--
	  *
	  * TABLE munipress_about_link_settings
	  *
	  -->
	<table name="munipress_added_link_settings">
		<field name="added_link_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="locale" type="C2" size="5">
			<NOTNULL/>
			<DEFAULT VALUE=""/>
		</field>
		<field name="setting_name" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="setting_value" type="XL"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
			<descr>(bool|int|float|string|object)</descr>
		</field>
		<descr>Added links' settings.</descr>
		<index name="munipress_added_link_settings_added_link_id">
			<col>added_link_id</col>
		</index>
		<index name="munipress_added_link_settings_pkey">
			<col>added_link_id</col>
			<col>locale</col>
			<col>setting_name</col>
			<UNIQUE />
		</index>
	</table>
</schema>
